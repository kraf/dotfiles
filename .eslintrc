{
    "parser": "babel-eslint",

    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "rules": {
        "new-cap": 0,
        "camelcase": 1,
        "curly": 1,
        "quotes": [1, "single"],
        "no-var": 2,
        "no-trailing-spaces": 0,
        "no-underscore-dangle": 0,
        "comma-spacing": 0,
        "yoda": 0,
        "no-undef": 2,
        "space-infix-ops": 0,
        "no-use-before-define": 0,
        "no-unused-vars": 2,
        "prefer-const": 1,
        "semi": 2
    },

    "ecmaFeatures": {
        "jsx": true
    },

    "plugins": [
        "eslint-plugin-react"
    ]
}
